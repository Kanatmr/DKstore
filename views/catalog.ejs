<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>DK Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/css/catalog.css">
    <link href="https://fonts.googleapis.com/css?family=Merriweather:300,400,400i,700&amp;subset=cyrillic-ext" rel="stylesheet">
    <link rel="icon" type="images/jpeg" href="../public/images/logo.ico">
</head>

<body>

<header class="header">
    <div class="container text-center">
        <img src="../public/images/pht (2).png" width="400" alt="Онлайн магазин одежды">
        <div class="display-4">DK Store</div>
        <p class="lead">Quality and style</p>
    </div>
</header>

<div class="container mb-5">
    <div class="row">
        <div class="col-md-8">
            <div class="row">

                <!-- Одежда -->
                <div class="col-md-6">
                    <div class="card mb-4" data-id="01">
                        <img class="product-img" src="../public/images/1.webp" alt="Boss">
                        <div class="card-body text-center">
                            <h4 class="item-title">Boss</h4>

                            <div class="details-wrapper">
                                <!--Counter-->
                                <div class="items counter-wrapper">
                                    <div class="items__control" data-action="minus">-</div>
                                    <div class="items__current" data-counter>1</div>
                                    <div class="items__control" data-action="plus">+</div>
                                </div>
                                <!--//Counter-->
                                <div class="price">
                                    <div class="price__currency" >5000 ₸</div>
                                </div>
                            </div>

                            <button data-cart type="button" class="btn btn-block btn-outline-warning">
                                + Add to Basket
                            </button>

                        </div>
                    </div>
                </div>
                <!-- // Одежда -->

                <!-- Одежда -->
                <div class="col-md-6">
                    <div class="card mb-4" data-id="02">
                        <img class="product-img" src="../public/images/2.webp" alt="Hugo">
                        <div class="card-body text-center">
                            <h4 class="item-title">Hugo</h4>

                            <div class="details-wrapper">
                                <div class="items counter-wrapper">
                                    <div class="items__control" data-action="minus">-</div>
                                    <div class="items__current" data-counter>1</div>
                                    <div class="items__control" data-action="plus">+</div>
                                </div>

                                <div class="price">
                                    <div class="price__currency">6000 ₸</div>
                                </div>
                            </div>

                            <button data-cart type="button" class="btn btn-block btn-outline-warning">+ Add to Basket</button>

                        </div>
                    </div>
                </div>
                <!-- // Одежда -->

                <!-- Одежда -->
                <div class="col-md-6">
                    <div class="card mb-4" data-id="03">
                        <img class="product-img" src="../public/images/3.webp" alt="Gap">
                        <div class="card-body text-center">
                            <h4 class="item-title">Gap</h4>

                            <div class="details-wrapper">
                                <div class="items counter-wrapper">
                                    <div class="items__control" data-action="minus">-</div>
                                    <div class="items__current" data-counter>1</div>
                                    <div class="items__control" data-action="plus">+</div>
                                </div>

                                <div class="price">
                                    <div class="price__currency">5500 ₸</div>
                                </div>

                            </div>

                            <button data-cart type="button" class="btn btn-block btn-outline-warning">+ Add to Basket</button>

                        </div>
                    </div>
                </div>
                <!-- // Одежда -->

                <!-- Одежда -->
                <div class="col-md-6">
                    <div class="card mb-4" data-id="04">
                        <img class="product-img" src="../public/images/4.webp" alt="Adidas">
                        <div class="card-body text-center">
                            <h4 class="item-title">Adidas</h4>

                            <div class="details-wrapper">
                                <div class="items counter-wrapper">
                                    <div class="items__control" data-action="minus">-</div>
                                    <div class="items__current" data-counter>1</div>
                                    <div class="items__control" data-action="plus">+</div>
                                </div>

                                <div class="price">
                                    <div class="price__currency">4500 ₸</div>
                                </div>

                            </div>

                            <button data-cart type="button" class="btn btn-block btn-outline-warning">
                                + Add to Basket
                            </button>

                        </div>
                    </div>
                </div>
                <!-- // Одежда -->

            </div>
        </div>
        <div class="col-md-4">

            <!-- Корзина -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Your order</h4>
                        <div data-cart-empty class="alert alert-secondary" role="alert">
                            Empty baskets
                        </div>
                        <!-- cart-wrapper -->
                        <div class="cart-wrapper">

                        </div>
                        <!-- // cart-wrapper -->

                        <!-- Стоимость заказа -->
                        <div class="cart-total">
                            <p><span class="h5">Delivery:</span> <span class="delivery-cost free">Free</span> </p>
                            <p><span class="h5">Total:</span> <span class="total-price">0</span> <span class="rouble">₸</span></p>
                        </div>
                        <!-- // Стоимость заказа -->

                </div>

                <!-- Оформить заказ -->
                <div id="order-form" class="card-body border-top none">
                    <h5 class="card-title">Place an order</h4>
                        <form>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Your number">
                            </div>
                            <button type="submit" class="btn btn-primary">Order</button>
                        </form>
                </div>
                <!-- // Оформить заказ -->

            </div>
            <!-- // Корзина -->


        </div>
    </div>
</div>

<!-- скрипты -->
<script src="./js/calcCartPrice.js"></script>
<script src="./js/toggleCartStatus.js"></script>
<script src="./js/counter-2.js"></script>
<script src="./js/card-2.js"></script>

</body>

</html>
